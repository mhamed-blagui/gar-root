<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>com.gar.root</groupId>
	<artifactId>gar-root</artifactId>
	<version>${gar.version}</version>
	<packaging>pom</packaging>
	<name>Gar Parent Project</name>

	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>1.5.8.RELEASE</version>
		<relativePath /> <!-- lookup parent from repository -->
	</parent>

	<modules>
		<module>gar-resource</module>
		<module>gar-authserver</module>
		<module>gar-ui</module>
	</modules>

	<properties>
		<gar.version>0.0.1-SNAPSHOT</gar.version>
		<assembly.plugin.version>2.2.1</assembly.plugin.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<java.version>1.8</java.version>
		<javamelody.version>1.65.0</javamelody.version>
		<commons.collections4.version>4.1</commons.collections4.version>
		<commons.lang3.version>3.5</commons.lang3.version>
		<jasypt.version>1.14</jasypt.version>
		<dropwizard-metrics.version>3.2.2</dropwizard-metrics.version>
		<jdk.version>1.8</jdk.version>
		<jhipster.server.version>1.1.9</jhipster.server.version>
		<hibernate.version>5.2.8.Final</hibernate.version>
		<log4j.version>1.2.17</log4j.version>
		<jasypt.api.version>1.9.2</jasypt.api.version>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>${jdk.version}</source>
					<target>${jdk.version}</target>
					<encoding>${project.build.sourceEncoding}</encoding>
					<compilerArgument>-proc:none</compilerArgument>
				</configuration>
			</plugin>
			<!-- Assembly -->
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<finalName>gar_release_v${gar.version}</finalName>
					<appendAssemblyId>false</appendAssemblyId>
					<descriptors>
						<descriptor>src/assemblies/bin_v${gar.version}.xml</descriptor>
					</descriptors>
				</configuration>
			</plugin>
		</plugins>
	</build>

